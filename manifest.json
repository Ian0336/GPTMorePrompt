{
    "name": "GPTMorePrompt",
    "description": "This extension will add dropdowns to the GPT prompt to allow you to select ",
    "version": "2.0",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*", "*://gemini.google.com/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "host_permissions": [
      "*://chatgpt.com/*",
      "*://chat.openai.com/*",
      "*://gemini.google.com/*"
    ],
    "manifest_version": 3
}
  